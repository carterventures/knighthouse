<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", inventory_items_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_inventory_item_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> InventoryItems</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.inventory_item.old_item_id", :default => t("activerecord.labels.old_item_id", :default => "Old_item_id")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @inventory_items.each do |inventory_item| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= inventory_item.id %>
          </td>
                    <td>
            <%= link_to inventory_item.old_item_id, inventory_item_path(inventory_item) %>
          </td>
                    <td>
            <%= inventory_item.created_at.localtime %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", inventory_item_path(inventory_item) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_inventory_item_path(inventory_item) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", inventory_item_path(inventory_item), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @inventory_items  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

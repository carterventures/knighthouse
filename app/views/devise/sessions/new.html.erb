<div class="modal">
  <div class="modal-header">
    <h3>Knighthouse Login</h3>
  </div>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| -%>
  <div class="modal-body">
    <div class="alert-area">
      <% flash.each do |type, message| -%>
      <div class="message <%= type %>">
        <p><%=  message %></p>
      </div>
      <% end -%>
    </div>
      <div class="control-group">
        <label class="control-label" for="email">Email Address:</label>
        <div class="controls">
          <%= f.email_field :email, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="password">Password:</label>
        <div class="controls">
          <%= f.password_field :password, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
            <%= f.check_box :remember_me %> Keep Me Logged In 
          </label>
        </div>
      </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary login-button">Login</button>
    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn password-button" %>
  </div>
  <% end -%>
</div>
